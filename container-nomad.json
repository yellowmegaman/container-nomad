{
  "variables": {
    "app":             "{{env `DRONE_REPO_NAME`}}",
    "from_image":      "{{env `FROM_IMAGE`}}",
    "nomad_ver":       "{{env `NOMAD_VERSION`}}",
    "ct_ver":          "{{env `CONSUL_TEMPLATE_VERSION`}}",
    "project_name":    "{{env `PROJECT_NAME`}}",
    "docker_username": "{{env `DOCKER_USERNAME`}}",
    "docker_password": "{{env `DOCKER_PASSWORD`}}",
    "quay_username":   "{{env `QUAY_USERNAME`}}",
    "quay_password":   "{{env `QUAY_PASSWORD`}}",
    "tag":             "{{env `NOMAD_VERSION`}}"
  },
  "sensitive-variables": ["docker_username", "docker_password", "quay_username", "quay_password"],
  "builders":[
    {
      "type": "docker",
      "commit": true,
      "image": "{{user `from_image`}}",
      "run_command": ["-dit", "--net=host", "{{.Image}}", "/bin/ash"],
      "changes": [
        "ENTRYPOINT [\"/usr/bin/nomad\"]"
      ]
    }
  ],
  "provisioners": [
    {
        "type": "shell",
        "inline": [
          "wget https://releases.hashicorp.com/nomad/{{user `nomad_ver`}}/nomad_{{user `nomad_ver`}}_linux_amd64.zip -qO /tmp/nomad.zip",
          "wget https://releases.hashicorp.com/consul-template/{{user `ct_ver`}}/consul-template_{{user `ct_ver`}}_linux_amd64.zip -qO /tmp/consul-template.zip",
          "cd /usr/bin",
          "unzip -jq /tmp/consul-template.zip",
          "unzip -jq /tmp/nomad.zip",
          "rm /tmp/consul-template.zip",
          "rm /tmp/nomad.zip",
          "chmod +x /usr/bin/nomad",
          "chmod +x /usr/bin/consul-template"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "docker.io/{{user `project_name`}}/{{user `app`}}",
        "tag": "{{user `tag`}}"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{user `docker_username`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ],
    [
      {
        "type": "docker-tag",
        "repository": "docker.io/{{user `project_name`}}/{{user `app`}}",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_username": "{{user `docker_username`}}",
        "login_password": "{{user `docker_password`}}"
      }
    ],
    [
      {
        "type": "docker-tag",
        "repository": "quay.io/{{user `project_name`}}/{{user `app`}}",
        "tag": "{{user `tag`}}"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_server": "quay.io",
        "login_username": "{{user `quay_username`}}",
        "login_password": "{{user `quay_password`}}"
      }
    ],
    [
      {
        "type": "docker-tag",
        "repository": "quay.io/{{user `project_name`}}/{{user `app`}}",
        "tag": "latest"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_server": "quay.io",
        "login_username": "{{user `quay_username`}}",
        "login_password": "{{user `quay_password`}}"
      }
    ]
  ]
}
